<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "hn.criterio.app"
        version     = "1.0.0" >

	<name>Criterio App</name>

	<description>Peri&#243;dico Digital con l&#237;nea abierta, no partidario, ni tendencioso por razones de clase social, religiosas, raza, culturas u otros aspectos sociol&#243;gicos.</description>

	<author href="http://www.davidvalladares.com" email="yo@davidvalladares.com">David Valladares</author>

	<!--<gap:platform name="android" />-->
	<content src="index.html" />
	<!-- General preferences 
	<preference name="buildArchitecture" value="x86" />
	<preference name="xwalkMultipleApk" value="true" />
	<preference name="android-build-tool" value="ant" />

	<preference name="phonegap-version" value="" />
	<preference name="permissions" value="none"/>-->

	<preference name="DisallowOverscroll" value="true" />
	<preference name="webviewbounce" value="false" />
	<preference name="android-minSdkVersion" value="14" />
	<preference name="AndroidPersistentFileLocation" value="Compatibility" />
	
	<!-- PhoneGap plugin declaration -->
	<plugin name="cordova-plugin-battery-status" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.1.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-contacts" source="npm" spec="~2.0.1" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.1" />
    <plugin name="cordova-plugin-device-motion" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-device-orientation" source="npm" spec="~1.0.2" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.1.1" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="~1.5.0" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" source="npm" spec="~2.2.0" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <plugin name="cordova-plugin-splashscreen" source="npm" spec="~3.2.1" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
	<plugin name='cordova-plugin-AdMobPlugin' value='com.google.cordova.plugin.AdMobPlugin'/>
	<plugin name="cordova-plugin-customurlscheme" spec="4.2.0" >
		<param name="URL_SCHEME" value="crtrApp" />
	</plugin>

	<!-- Whitelist policy  -->
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

	<!-- SplashScreen configuration -->
	<preference name="SplashScreen" value="splash" />
	<preference name="SplashScreenDelay" value="10000" />
	<preference name="FadeSplashScreenDuration" value="600" />
	<preference name="ShowSplashScreenSpinner" value="true" />

	<!-- Icons and Splashscreens declaration -->
<platform name="android">
	<icon src="icon.png" />
	<icon src="icons/icon-wp-appkit-ldpi.png"  density="ldpi" />
	<icon src="icons/icon-wp-appkit-mdpi.png"  density="mdpi" />
	<icon src="icons/icon-wp-appkit-hdpi.png"  density="hdpi" />
	<icon src="icons/icon-wp-appkit-xhdpi.png"  density="xhdpi" />
	<icon src="icons/icon-wp-appkit-xxhdpi.png"  density="xxhdpi" />
	<icon src="icons/icon-wp-appkit-xxxhdpi.png"  density="xxxhdpi" />
	
	<splash src="splash.9.png" />
	<splash src="splashscreens/splashscreen-wp-appkit-ldpi.9.png"  density="ldpi" />
	<splash src="splashscreens/splashscreen-wp-appkit-mdpi.9.png"  density="mdpi" />
	<splash src="splashscreens/splashscreen-wp-appkit-hdpi.9.png"  density="hdpi" />
	<splash src="splashscreens/splashscreen-wp-appkit-xhdpi.9.png"  density="xhdpi" />
	<splash src="splashscreens/splashscreen-wp-appkit-xxhdpi.9.png"  density="xxhdpi" />
	<splash src="splashscreens/splashscreen-wp-appkit-xxxhdpi.9.png"  density="xxxhdpi" />
</platform>	
</widget>
